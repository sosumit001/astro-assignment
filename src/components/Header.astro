---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header class="web-header">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/service">Services</a></li>
    <li><a href="/aboutus">About Us</a></li>
    <li><a href="/contact">Contact Us</a></li>
  </ul>
</header>

<style>
  .web-header {
    position: sticky;
    top: 0px;
    background: black;
    height: 30px;
    margin-top: -20px;
  }
  .web-header ul {
    list-style: none;
    display: flex;
    gap: 10px;
    background: white;
    height: 100%;
    padding-top: 2px;
  }
  .web-header ul li a {
    position: relative;
    color: black;
    text-decoration: none;
    font-size: 0.7rem;
  }
  .web-header ul li a:after {
    position: absolute;
    content: "";
    height: 10%;
    width: 0%;
    background: black;
    top: 100%;
    left: 0%;
    transition: 500ms;
  }
  .web-header ul li a:hover::after {
    width: 100%;
  }
</style>
